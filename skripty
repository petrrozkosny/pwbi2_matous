dim_datumy = 
ADDCOLUMNS(
-- funkce SELECTCOLUMNS() vybira sloupce z tabulky vracene funkci CALENDARAUTO()
-- a prejmenovava je na "datum"
    SELECTCOLUMNS(
        -- funkce vrati sloupec s nazvem [Date]
        CALENDARAUTO()
    ,"datum",[Date])
,"rok",YEAR([datum])
,"kvartal",QUARTER([datum])
,"mesic",MONTH([datum])
,"den",DAY([datum]))
